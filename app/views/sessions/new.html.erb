<div class="row top-div">
  <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6">
    <%= form_tag sessions_path, class: 'form-horizontal' do %>
      <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email,"", class: "form-control" %>
      </div>
      <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password,"", class: "form-control" %>
      </div>
      <div class="form-group">
      <%= submit_tag "Sign In" %>
      </div>
    <% end %>
  </div>
</div>
