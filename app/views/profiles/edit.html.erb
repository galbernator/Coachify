<div class="row top-div">
  <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6">
    <%= simple_form_for @profile, html: { class: "form-horizontal"} do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :avatar %>
      <p>To save your changes, please confirm your password.</p>
      <%= f.input :current_password %>
      <p>If you want to change your password, enter and confirm it below, otherwise, leave these fields blank.</p>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.submit "Update Profile", class: "form-control submit-button" %>
    <% end %>
  </div>
</div>
