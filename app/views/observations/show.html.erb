<div class="top-div">
  <div class="row">
    <div class="col-xs-12 col-md-7">
      <h4>Total Evaluations</h4>
      <%= column_chart @observations.group_by_day("observations.created_at", format: "%B %d").count %>
    </div>
    <div class="col-xs-12 col-md-5">
      <h4>Completed Observations</h4>
      <% results = Hash.new(0) %>
      <% @observations.each do |observation| %>
        <% percent = observation.responses.length.to_f / 20 %>
        <% if percent > 0.8 %>
          <% results["complete"] += 1 %>
        <% else %>
          <% results["incomplete"] += 1 %>
        <% end %>
      <% end %>
      <%= pie_chart(results) %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <!-- start a new hash called questions outside of the loop -->
      <% questions = Hash.new %>
      <!-- get all of the questions that are in the evaluation -->
      <% eval = @observations.first.evaluation_id %>
      <% eval_questions = Question.where(evaluation_id: eval) %>
      <!-- loop over each of the questions and get the question text -->
      <% eval_questions.each do |question| %>
        <div>
          <!-- instanciate a variable called answers to hold all of the answer options for the specific question -->
          <% answers = Hash.new(0) %>
          <!-- loop through the answer possibilities and add them to answers -->
          <% question.answers.each do |answer| %>
            <% answers[answer.id] +=0 %>
          <% end %>
          <!-- add the hash of answers to the hash of questions by the question id -->
          <% questions[question.id] = answers %>
        </div>
      <% end %>
      <%= questions %>
    </div>
  </div>
</div>
<div>
  <!-- loop over each of the observations from the company -->
  <% @observations.each do |observation| %>
    <!-- create a 'button' to enable the drop down menu with the date and name of employee observed -->
    <button class="observation-list-button" data-toggle="collapse" data-target="#observation-<%= observation.id %>" aria-expanded="false" aria-controls="observation-<%= observation.id %>">
      </span>
      <%= observation.created_at.strftime("%B %d") %> - <%= observation.subject.full_name %> (<%= observation.subject.location.name %>)
    </button>
      <div class="collapse" id="observation-<%= observation.id %>">
        <% question_number = 1 %>
        <table>
          <tbody>
            <% observation.responses.reverse.each do |response| %>
              <tr>
                <td>
                  <!-- break down each question into the number of times that each answer was given -->
                  <%= question_number %>. <%= response.question.text %>
                </td>
                <td>
                  <%= response.answer.answer %> |
                  <%= link_to "See answer breakdown", question_breakdowns_path(response.question), remote: true, id: "<%= response.question.id %>-question" data-toggle: "modal" data-target: "#myModal" %>

                <!-- put modal code here -->




                </td>
                <% question_number += 1 %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <hr>
  <% end %>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <%# pie_chart @observation.responses.questio.group(:).count %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
