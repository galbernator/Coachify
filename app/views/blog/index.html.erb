<div class="row" id="blog-background">
  <div class="col-xs-12">
    <h1 class="page-title">Blog</h1>
  </div>
</div>
<div class="row" id="blog-topics">
    <% @topics.each do |topic| %>
      <div class="col-xs-4 col-sm-2 blog-topics">
        <span class="topic"><%= topic %></span>
      </div>
    <% end %>
</div>
<div class="row" id="nav-trigger">
  <% @blogs.each do |post| %>
    <%= render partial: 'post', locals: { post: post } %>
  <% end %>
</div>

<div>
  <%= link_to "Create New Post", new_blogpost_path %>
</div>
