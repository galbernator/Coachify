<div class="row" id="blog-background">
  <div class="col-xs-12">
    <h1 class="page-title">Blog</h1>
  </div>
</div>
<div class="row" id="blog-topics">
    <% @topics.each do |topic| %>
      <div class="col-xs-4 col-sm-2 blog-topics">
        <span class="topic"><%= topic %></span>
      </div>
    <% end %>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-3">
    <div class="row">
      <div class="col-xs-12">
        <form class="search-box">
          <input id="search-form" class="search-field" placeholder="Search the Blog"></input><button type="button" id="search-button" class="btn btn-lg"><span class="glyphicon glyphicon-search"</button>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-9">
    <div class="row" id="nav-trigger">
      <% @blogs.each do |post| %>
        <%= render partial: 'post', locals: { post: post } %>
      <% end %>
    </div>
  </div>
</div>

<div>
  <% if is_site_admin? %>
    <%= link_to "Create New Post", new_blogpost_path %>
  <% end %>
</div>
