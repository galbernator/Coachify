<div class="top-div row">
  <div class="col-xs-12">
    <h1><%= @evaluation.title %></h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-3 col-md-2">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
      ADD A QUESTION
    </button>
  </div>
  <div class="col-xs-12 col-sm-9 col-md-10" id="saved-evaluation-questions">
    <% @questions.each do |question| %>
      <div>
        <%= question.text %>
      </div>
    <% end %>
  </div>
</div>


  <!-- Modal -->
  <div class="modal fade row" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Add a Question</h4>
        </div>
        <div class="modal-body col-xs-offset-1 col-xs-10">
          <%= simple_form_for([@evaluation, @question],
                                    html: {class: "form-horizontal"}) do |f| %>
            <%= f.input :text %>
            <%= f.input :kind, collection: @kinds %>
            <div class="answer-group" id="true-or-false-answers">
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="True" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="False" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="N/A" />
            </div>
            <div class="answer-group" id="yes-or-no-answers">
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="Yes" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="No" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="N/A" />
            </div>
            <div class="answer-group" id="scale-1-10-answers">
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="1" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="2" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="3" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="4" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="5" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="6" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="7" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="8" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="9" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="10" />
            </div>
            <div class="answer-group" id="grade-answers">
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="A" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="B" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="C" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="D" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="F" />
            </div>
            <div class="answer-group" id="multiple-choice-answers">
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="" />
              <a class="add-answer">Add Answer</a>
            </div>
            <div class="answer-group" id="multiple-answer-answers">
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="" />
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="" />
              <a class="add-answer">Add Answer</a>
            </div>
            <div class="answer-group" id="custom-answers">
              <input type='text' class="form-control answer-field" name='question[answers_attributes][][answer]' value="" />
              <a class="add-answer">Add Answer</a>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Save Question", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
